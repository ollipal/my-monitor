<div id="morningform" class="initiallyHidden">
    <h2>Morning report</h2>
    <form action="/morningform" method="POST">
        <div class="form-group">
            <label for="fdate">Date:</label><br>
            <input type="date" id="fdate" name="date" value="<%= date %>"><br>
            <label for="fsleep_duration">Sleep duration (in hours):</label><br>
            <input type="number" id="fsleep_duration" name="sleep_duration" step="0.1"><br>
            <label for="fsleep_quality">Sleep quality: </label>
            <output>3</output><input type="range" value="3" min="1" max="5" id="fsleep_quality" name="sleep_quality"
                oninput="this.previousElementSibling.value = this.value"><br>
            <label for="fmorning_mood">Generic mood: </label>
            <output>3</output><input type="range" value="3" min="1" max="5" id="fmorning_mood" name="morning_mood"
                oninput="this.previousElementSibling.value = this.value">
        </div>
        <input type="submit" value="Submit" /><br>
    </form>
</div>